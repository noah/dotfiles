"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
"
"      Sounds & Display
"
"
" B Bookmark bar
" C Always show the command-line outside of the status line
" M Always show messages outside of the status line
" N Tab number over image
" T Toolbar
" b Bottom scrollbar
" l Left scrollbar (l and r are mutually exclusive)
" m Menu bar
" n Tab number
" r Right scrollbar
"
set guioptions=CMnr
"
" highlight previous search matches
set hlsearch
"
" how many completions to show
set maxitems=5
"
" show link destination on hover
set showstatuslinks=1
"
" when to show list of tabs at top
set showtabline=1
"
"disable beep
javascript liberator.beep = function() { return false; }

"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
"
"      Keybindings
"
"
" scroll more than 1 line at a time
map j 10<C-e>
map k 10<C-y>
" override muscle memory
map <C-f> /
" _hells_ yeah.
map <C-d> :pinboard<CR>

set editor="gvim -f"


"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
"
"      Completion
"
"
" When more than one match, list all matches and complete the first
" match.
set wildmode=list:full 
"
" s Search engines and keyword URLs
" f Local files
" l Namoroka location bar entries (bookmarks and history sorted in an intelligent way)
" b Bookmarks
" h History
" S Search engine suggestions
" t Open tabs
set complete=l


"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
"
"      Hints
"
" Alphabet for selecting and labeling hints
set hintkeys="asdfg;lkjh"


"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
"
"      Functions
"
"
command! pinboard :open javascript:q=location.href;if(document.getSelection){d=document.getSelection();}else{d='';};p=document.title;void(open('https://pinboard.in/add?showtags=yes&url='+encodeURIComponent(q)+'&description='+encodeURIComponent(d)+'&title='+encodeURIComponent(p),'Pinboard',%20'toolbar=no,width=700,height=600')); 


" vim: ft=vim
