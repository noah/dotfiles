! "padding"
urxvt.internalBorder:   6 
urxvt.externalBorder:   0
urxvt.urgentOnBell:             true
urxvt.cursorBlink:              true
urxvt.cursorUnderline: false

urxvt*buffered:true
urxvt*depth:32
urxvt*fading:0
urxvt*shading:0
urxvt*visualBell:false
urxvt*inheritPixmap:true
urxvt*borderLess:false
urxvt*:scrollTtyKeypress: true
urxvt*transparent:false

urxvt*jumpScroll:true
urxvt*loginShell:true
urxvt*saveLines:65535
urxvt*scrollBar_right:true
urxvt*scrollBar:false
urxvt*scrollstyle:plain
urxvt*scrollTtyKeypress:    true
urxvt*scrollTtyOutput:      false
urxvt*scrollWithBuffer:     true
urxvt*termName: rxvt-256color
urxvt*transparentscrollbar:true
urxvt*transpscrollbar:true

!urxvt*font:xft:Dina:medium:pixelsize=14
!urxvt*boldFont:xft:Dina:medium:pixelsize=14
!
urxvt*font:xft:Monaco:medium:pixelsize=11:autohint=yes:antialias=yes
urxvt*boldFont:xft:Monaco:medium:pixelsize=11:autohint=yes:antialias=yes
!
!urxvt*font:xft:Inconsolata:medium:pixelsize=13:autohint=yes:antialias=yes
!urxvt*boldFont:xft:Inconsolata:medium:pixelsize=13:autohint=yes:antialias=yes

!urxvt*font: -*-proggycleanttsz-medium-*-normal-*-*-*-*-*-*-*-iso8859-*
! bold does not work


/*
*
*       Xft
* */
xft.dpi: 96
xft.rgba: rgb
!xft.antialias: true
!xft.hinting: true
! hints{light, medium, full}
!xft.hintstyle: hintslight

/*
*       
*       hyperlinks
* */

urxvt.perl-lib:           /home/tilton/.urxvt
urxvt.keysym.Control-Shift-Up:      perl:font:increment
urxvt.keysym.Control-Shift-Down:    perl:font:decrement
urxvt.perl-ext:           default,matcher,font
urxvt*urlLauncher:/home/tilton/bin/google-chrome
urxvt.matcher.button:     1
urxvt.keysym.C-Delete:    perl:matcher
urxvt.underlineURLs:      true



