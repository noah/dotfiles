# libreoffice
application/msword;                                                                 mutt_bgrun libreoffice '%s' 2>&1 >> ~/logs/mutt-bgrun.log
application/vnd.ms-excel;                                                           mutt_bgrun libreoffice '%s' 2>&1 >> ~/logs/mutt-bgrun.log
application/vnd.oasis.opendocument.text;                                            mutt_bgrun libreoffice '%s' 2>&1 >> ~/logs/mutt-bgrun.log
application/vnd.openxmlformats-officedocument.wordprocessingml.document;            mutt_bgrun libreoffice '%s' 2>&1 >> ~/logs/mutt-bgrun.log
application/vnd.openxmlformats-officedocument.spreadsheetml.sheet;                  mutt_bgrun libreoffice '%s' 2>&1 >> ~/logs/mutt-bgrun.log
application/vnd.ms-office;                                                          mutt_bgrun libreoffice '%s' 2>&1 >> ~/logs/mutt-bgrun.log
application/vnd.wolfram.mathematica;                                                mutt_bgrun mathematica '%s' 2>&1 >> ~/logs/mutt-bgrun.log


# rtf
#application/rtf; unrtf %s | lynx -dump -force_html -stdin; copiousoutput
application/rtf; unrtf %s | elinks -dump -force-html; copiousoutput
application/rtf; unrtf --text %s ; copiousoutput

# pdf
application/zip;                                                                    mutt_bgrun nautilus '%s 2>&1 >> ~/logs/mutt-bgrun.log
application/octet-stream;                                                           mutt_bgrun evince '%s' 2>&1 >> ~/logs/mutt-bgrun.log


#
application/mathematica;                                                            mutt_bgrun mathematica '%s' 2>&1 >> ~/logs/mutt-bgrun.log


# images
image/*;                                                                            mutt_bgrun gqview '%s' 2>&1 >> ~/logs/mutt-bgrun.log

image/jpeg;                                                                         mutt_bgrun gqview '%s' 2>&1 >> ~/logs/mutt-bgrun.log


# html
text/html;                                                                          w3m -I %{charset} -T text/html; copiousoutput;
text/html;                                                                          lynx -force_html %s
text/html;                                                                          lynx -force_html -dump %s; copiousoutput

# vcard
text/x-vcard; mutt.vcard.filter; copiousoutput

application/pdf; evince %s
